<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo1.mapper.ProductMapper">


    <!-- 查询热销商品的前四名：List<Product> findHostList() -->
    <select id="findHotList" resultType="com.mystore.entity.Product">
        SELECT
            *
        FROM
            t_product
        WHERE
            status=1
        ORDER BY
            priority DESC
            LIMIT 0,4
    </select>


    <!-- 根据商品id查询商品详情：Product findById(Integer id) -->
    <select id="findById" resultType="com.mystore.entity.Product">
        SELECT
            *
        FROM
            t_product
        WHERE
            id=#{id}
    </select>
</mapper>